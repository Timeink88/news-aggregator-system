{
  "name": "news-aggregator-system",
  "version": "1.0.0",
  "description": "一个基于AI技术的现代化新闻聚合系统，支持多源新闻抓取、智能内容摘要和实时推送功能。集成DeepSeek-V3.1 AI模型，提供RSS、NewsAPI等多种新闻源聚合，包含完整的Web管理界面和Docker部署方案。",
  "main": "src/app.js",
  "bin": {
    "news-aggregator": "src/cli.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/cli.js start",
    "stop": "node src/cli.js stop",
    "restart": "node src/cli.js restart",
    "status": "node src/cli.js status",
    "health": "node src/cli.js health",
    "dev": "node src/cli.js dev",
    "build": "echo 'No build step required for Node.js project'",
    "docker:build": "docker build -t news-aggregator .",
    "docker:run": "docker run -p 3000:3000 news-aggregator",
    "docker:compose": "docker-compose up",
    "docker:compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "setup": "npm install",
    "test": "node test/basic-test.js"
  },
  "keywords": [
    "news",
    "aggregator",
    "ai",
    "rss",
    "sentiment-analysis",
    "stock-analysis",
    "email-notification",
    "docker",
    "nodejs"
  ],
  "author": "timink",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.1.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "openai": "^4.26.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.6.11",
    "resend": "^3.2.0",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Timeink88/news-aggregator-system.git"
  },
  "bugs": {
    "url": "https://github.com/Timeink88/news-aggregator-system/issues"
  },
  "homepage": "https://github.com/Timeink88/news-aggregator-system#readme"
}
