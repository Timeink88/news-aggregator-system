{
  "name": "news-aggregator-system",
  "version": "1.0.0",
  "description": "基于Docker的自动化新闻聚合、智能分析和推送系统，专注于科技、中国财经及A股、时政领域的个性化资讯服务",
  "main": "src/app.js",
  "bin": {
    "news-aggregator": "src/cli.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/cli.js start",
    "stop": "node src/cli.js stop",
    "restart": "node src/cli.js restart",
    "status": "node src/cli.js status",
    "health": "node src/cli.js health",
    "dev": "node src/cli.js dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"src\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:performance": "jest --testPathPattern=\"performance\"",
    "test:all": "node test/run-all-tests.js",
    "lint": "eslint src/ --fix",
    "lint:check": "eslint src/",
    "build": "echo 'No build step required for Node.js project'",
    "docker:build": "docker build -t news-aggregator .",
    "docker:run": "docker run -p 3000:3000 news-aggregator",
    "docker:compose": "docker-compose up",
    "docker:compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "setup": "npm install && node scripts/setup.js",
    "test:full": "node run-tests.js",
    "test:simple": "node simple-test.js",
    "test:suite": "node test-suite.js",
    "test:scheduler": "node test-scheduler-service.js",
    "test:cleanup": "node test-cleanup-service.js",
    "test:server": "node test-express-server.js",
    "test:api": "node test-web-admin-api.js"
  },
  "keywords": [
    "news",
    "aggregator",
    "ai",
    "rss",
    "sentiment-analysis",
    "stock-analysis",
    "email-notification",
    "docker",
    "nodejs"
  ],
  "author": "timink",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.1.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "openai": "^4.26.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.6.11",
    "resend": "^3.2.0",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "@types/jest": "^29.5.8",
    "babel-jest": "^30.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/news-aggregator-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/news-aggregator-system/issues"
  },
  "homepage": "https://github.com/your-org/news-aggregator-system#readme"
}
