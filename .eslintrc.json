{
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["off"],
    "linebreak-style": ["off"],
    "quotes": ["off"],
    "semi": ["off"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"],
    "no-trailing-spaces": ["off"],
    "eol-last": ["off"],
    "no-undef": ["warn"]
  },
  "ignorePatterns": ["**/*.test.js.bak", "**/backup/**", "**/node_modules/**"]
}